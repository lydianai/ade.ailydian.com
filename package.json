{
  "name": "ade-monorepo",
  "version": "1.0.0-alpha",
  "private": true,
  "description": "Akıllı Devlet Ekosistemi - AI-powered government assistant for Turkey",
  "author": "ADE Teknoloji A.Ş.",
  "license": "PROPRIETARY",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "dev:backend": "pnpm --filter @ade/backend dev",
    "dev:frontend": "pnpm --filter @ade/frontend dev",
    "dev": "concurrently \"pnpm dev:backend\" \"pnpm dev:frontend\"",
    "build:backend": "pnpm --filter @ade/backend build",
    "build:frontend": "pnpm --filter @ade/frontend build",
    "build": "pnpm build:backend && pnpm build:frontend",
    "test": "pnpm --filter @ade/* test",
    "test:e2e": "pnpm --filter @ade/* test:e2e",
    "lint": "pnpm --filter @ade/* lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "prisma:studio": "pnpm --filter @ade/backend prisma:studio",
    "prisma:migrate": "pnpm --filter @ade/backend prisma:migrate",
    "clean": "pnpm --filter @ade/* clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "concurrently": "^9.2.1",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3"
  },
  "pnpm": {
    "overrides": {
      "axios": "^1.6.5"
    }
  }
}
