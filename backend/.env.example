# ==================================
# ADE Backend Environment Variables
# ==================================

# Node Environment
NODE_ENV=development

# Server
PORT=3000
API_PREFIX=api
API_VERSION=v1

# Database (PostgreSQL)
DATABASE_URL="postgresql://ade_user:ade_password_change_in_production@localhost:5432/ade_db?schema=public"

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=ade_redis_password_change_in_production
REDIS_TTL=3600

# JWT Secrets (CHANGE IN PRODUCTION!)
JWT_ACCESS_SECRET=ade_jwt_access_secret_CHANGE_ME_32_chars_minimum
JWT_REFRESH_SECRET=ade_jwt_refresh_secret_CHANGE_ME_32_chars_minimum
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# Encryption
ENCRYPTION_KEY=ade_encryption_key_CHANGE_ME_32_chars_AES256

# CORS
CORS_ORIGIN=http://localhost:5173

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# File Upload (S3 or local)
AWS_REGION=eu-central-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
S3_BUCKET=ade-documents

# GİB e-Fatura API (Test Ortamı)
GIB_API_URL=https://efaturatest.gib.gov.tr
GIB_USERNAME=your_gib_username
GIB_PASSWORD=your_gib_password

# SGK e-Sigorta API
SGK_API_URL=https://esigortatest.sgk.gov.tr
SGK_API_KEY=your_sgk_api_key

# e-Devlet API
EDEVLET_API_URL=https://api-test.turkiye.gov.tr
EDEVLET_API_KEY=your_edevlet_api_key

# Claude AI API
CLAUDE_API_KEY=your_claude_api_key
CLAUDE_MODEL=claude-3-sonnet-20240229

# Email (SendGrid or AWS SES)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=your_sendgrid_api_key
EMAIL_FROM=noreply@ade.com.tr

# SMS (Netgsm)
SMS_API_URL=https://api.netgsm.com.tr
SMS_API_KEY=your_sms_api_key
SMS_FROM=ADE

# Logging
LOG_LEVEL=debug

# Sentry (Error Tracking)
SENTRY_DSN=your_sentry_dsn
